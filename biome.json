{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"extends": ["./node_modules/ultracite/config/vue/biome.jsonc"],
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"linter": {
		"rules": {
			"suspicious": {
				"noExplicitAny": "off",
				"useIterableCallbackReturn": "off",
				"noShadowRestrictedNames": "off"
			},
			"style": {
				"useNodejsImportProtocol": "off",
				"useConst": "off"
			},
			"correctness": {
				"noUnusedVariables": "warn",
				"noUnknownProperty": "off"
			},
			"complexity": {
				"noImportantStyles": "off"
			}
		}
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		},
		"linter": {
			"enabled": false
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true
	},
	"overrides": [
		{
			"includes": ["src/components/ComparisonManager.vue"],
			"linter": { "enabled": false },
			"formatter": { "enabled": false }
		},
		{
			"includes": ["components.d.ts"],
			"linter": { "enabled": false },
			"formatter": { "enabled": false }
		}
	]
}
