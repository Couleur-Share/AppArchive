{
	"compilerOptions": {
		// 设置生成的 JavaScript 版本为 ES2020
		"target": "es2020",
		// 使用新的类字段语法来定义类的字段
		"useDefineForClassFields": true,
		// 设置模块格式为 ES2020
		"module": "es2020",
		// 模块解析策略为 Node.js 风格
		"moduleResolution": "Node",
		// 启用所有严格类型检查选项
		"strict": false,
		// 处理 JSX 的策略，保持 JSX 不变
		"jsx": "preserve",
		// 生成 .map 文件以帮助调试
		"sourceMap": true,
		// 允许导入 JSON 文件作为模块
		"resolveJsonModule": true,
		// 每个文件作为单独模块处理
		"isolatedModules": true,
		// 允许 CommonJS 模块的默认导入工作方式更类似于 ES 模块
		"esModuleInterop": true,
		// 包含的库文件，这里指最新的 ECMAScript 以及浏览器环境的 DOM
		"lib": ["ESNext", "DOM"],
		// 跳过类型声明文件的类型检查
		"skipLibCheck": true,
		// 阻止生成编译后的输出文件
		"noEmit": true,
		// 设置解析非相对模块名的基准目录
		"baseUrl": ".",
		// 设置路径映射，用于替代模块路径以简化导入
		"paths": {
			"@/*": ["src/*"]
		},
		// 禁止对未声明类型的值使用 'any' 类型
		"noImplicitAny": true,
		// 启用对 null 和 undefined 的严格检查
		"strictNullChecks": true
	},
	// 包含在编译中的文件模式，支持 TypeScript 和 Vue 文件
	"include": [
		"src/**/*.ts", // 包含所有 TypeScript 源文件
		"src/**/*.d.ts", // 包含所有 TypeScript 类型声明文件
		"src/**/*.tsx", // 包含所有 TypeScript JSX 文件
		"src/**/*.vue" // 包含所有 Vue 文件
	],
	// 项目引用的其他配置文件
	"references": [
		{ "path": "./tsconfig.node.json" } // 引用另一个 TypeScript 配置文件
	]
}
